{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist/server",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2022",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/**/*", "shared/**/*"]
}
